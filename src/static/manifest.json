{
  "name": "Waverly - A Decentralized Social App",
  "description": "A Decentralized Social Chrome Extension App to put contents, mint NFTs on-chain & tip Contents!",
  "version": "2.13",
  "icons": {
    "16": "./favicon_io/favicon-16x16.png",
    "32": "./favicon_io/favicon-32x32.png",
    "128": "./favicon_io/favicon-128x128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_title": "WaverlyApp - a deso extension"
  },
  "permissions": ["storage", "browserAction", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
