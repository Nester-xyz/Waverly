{
  "name": "Waverly",
  "description": "A Chrome Extension to post & mint contents on DeSo Blockchain in few simple clicks!",
  "version": "1.0",
  "icons": {
    "16": "./favicon_io/favicon-16x16.png",
    "32": "./favicon_io/favicon-32x32.png",
    "128": "./favicon_io/favicon-128x128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_title": "WaverlyApp - a deso extension",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
